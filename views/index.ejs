<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Task Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  
<!-- Search & Priority Filter -->
<form action="/" method="GET" class="task-search-form">
  <input 
    type="text" 
    name="search" 
    placeholder="Search tasks..." 
    value="<%= typeof search !== 'undefined' ? search : '' %>">
  
  <select name="priority">
    <option value="">All Priorities</option>
    <option value="High" <%= priority === 'High' ? 'selected' : '' %>>High</option>
    <option value="Medium" <%= priority === 'Medium' ? 'selected' : '' %>>Medium</option>
    <option value="Low" <%= priority === 'Low' ? 'selected' : '' %>>Low</option>
  </select>

  <input 
    type="date" 
    name="dueDate" 
    value="<%= typeof dueDate !== 'undefined' ? dueDate : '' %>">

  <button type="submit">Filter</button>
</form>


  <header>
    <h1>ðŸ“‹ My Tasks Today</h1>
    <a class="btn" href="/add">+ Add Task</a>
  </header>

<main>
  <% if (tasks.length === 0) { %>
    <p>No tasks yet. Add one!</p>
  <% } else { %>

    <ul class="task-list">
      <% tasks.forEach(task => { %>
        <li class="task-card <%= task.priority.toLowerCase() %>">
          
          <div class="task-info">
            <strong><%= task.name %></strong>
            <span>Priority: <%= task.priority %></span>
            <span>Due: <%= task.due %></span>
          </div>

          <div class="task-actions">
            <a href="/edit/<%= task.id %>">Edit</a>
            <a href="/delete/<%= task.id %>">Delete</a>
          </div>

        </li>
      <% }); %>
    </ul>

  <% } %>
</main>


  <nav class="navbar">
    <a href="/calendar" class="nav-item">ðŸ—“ Calendar</a>
    <a href="/add" class="nav-add">+</a>
    <a href="/" class="nav-item active">ðŸ“‹ Tasks</a>
  </nav>

</body>
</html>
